{
  "name": "star-ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm run -F @star-ui/demo dev",
    "docs": "pnpm run -F @star-ui/docs dev",
    "build:components": "pnpm run -F @star-ui/components build",
    "build:core": "pnpm run -F @star-ui/core build",
    "build:shared": "pnpm run -F @star-ui/shared build",
    "build:demo": "pnpm run -F @star-ui/demo build",
    "build:docs": "pnpm run -F @star-ui/docs build",
    "build": "pnpm run build:shared && pnpm run build:core && pnpm run build:components && pnpm run build:demo && pnpm run build:docs",
    "docs:dev": "pnpm run -F @star-ui/docs dev",
    "docs:preview": "pnpm run -F @star-ui/docs preview",
    "lint": "eslint .",
    "format": "eslint . --fix && prettier --write . && stylelint 'packages/**/*.{css,scss,sass}' --fix"
  },
  "devDependencies": {
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.1",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^10.5.1",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.3.2",
    "sass": "^1.93.3",
    "stylelint": "^16.25.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-recommended-scss": "^16.0.2",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-scss": "^6.12.1",
    "typescript": "^5.9.3",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^3.9.0",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^2.1.4"
  },
  "dependencies": {
    "vue": "^3.5.22"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=7.0.0"
  }
}
