# EditorConfig is awesome: https://EditorConfig.org

# 根目录配置
root = true

# 所有文件适用
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown文件特殊配置
[*.md]
trim_trailing_whitespace = false

# JSON和YAML配置文件
[*.{json,yaml,yml,md,html}]
indent_size = 2

# TypeScript和JavaScript文件
[*.{ts,tsx,js,jsx,vue}]
indent_size = 2

# SCSS和CSS文件
[*.{scss,sass,css}]
indent_size = 2

# 配置文件
[*.{json,yml,yaml,jsonc,tsconfig.json}]
indent_size = 2

# 忽略的文件
[{node_modules/**,dist/**,build/**,coverage/**}]
insert_final_newline = unset
trim_trailing_whitespace = unset